{
    "compilerOptions" : {
        "target"                       : "ES2022",
        "module"                       : "ESNext",
        "moduleResolution"             : "node",
        "resolveJsonModule"            : true,
        "allowSyntheticDefaultImports" : true,
        "declaration"                  : true,
        "declarationMap"               : false,
        "emitDeclarationOnly"          : true,
        "outDir"                       : "dist",
        "removeComments"               : false,
        "skipLibCheck"                 : true,
        "strict"                       : true,
        "jsx"                          : "react-jsx"
    },
    "include"         : [
        "vite.config.ts",
        "src"
    ],
    "exclude"         : [
        "src/**/*.test.ts",
        "src/**/*.test.tsx",
        "src/**/test.tsx",
        "src/**/setupTests.ts"
    ]
}
